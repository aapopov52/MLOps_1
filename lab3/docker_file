FROM python:latest


COPY ./requirements.txt /tmp/
RUN pip install --requirement /tmp/requirements.txt # устновка зависимотсей


# копирование файлов проекта (вся папка на локальном диске копируется в контейнер)
COPY ./src /app/src
WORKDIR /app # вместо cd в Linux - переход в папку

#запуск скрипта
RUN python3 /app/src/train_model.py

CMD ["python3", "/app/src/gradio_run.py"]


